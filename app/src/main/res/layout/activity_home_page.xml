<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qiandao"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订阅"
                android:textSize="19dp"
                android:paddingTop="3dp"
                android:layout_marginLeft="19dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="推荐"
                android:textColor="#000000"
                android:textSize="19dp"
                android:paddingTop="3dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/huiyuanma"
                android:layout_gravity="right"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="320"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:hint="  请输入您想要搜素的商品"
            android:background="@drawable/underline"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="搜索"
            android:background="@drawable/circle_shape"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="6dp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="527dp"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/box_1"
                android:layout_marginTop="10dp"
                android:name="com.example.stimulate_taobao.Choose_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/choose_box" />

            <fragment
                android:id="@+id/box_2"
                android:name="com.example.stimulate_taobao.Choose_Box_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/choose_box_1"/>

            <fragment
                android:id="@+id/box_3"
                android:name="com.example.stimulate_taobao.Choose_Box_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/choose_box_2" />

            <fragment
                android:id="@+id/box_4"
                android:name="com.example.stimulate_taobao.Choose_Box_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/choose_box_3" />


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/bottom"
            android:name="com.example.stimulate_taobao.Bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/buttom"/>

    </RelativeLayout>



</LinearLayout>
